{% extends "CelonSoftwareAdminBundle::layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" rev="stylesheet" href="{{ asset("bundles/celonsoftwareadmin/css/signin.css")}}"/>
{% endblock %}
{% block body %}
    <div class="text-center">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {% include "CelonSoftwareAdminBundle::nav.html.twig" %}
        {% else %}
            <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-lg">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary btn-lg">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
            <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-primary btn-lg">Forgot Password</a>
        {% endif %}
    </div>
    {% if app.session.flashBag.has("message") %}
        {% for message in app.session.flashBag.get("message") %}
            <div class="main-message">                
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr> 
                    <th>#</th>
                    <th>Log ip</th>
                    <th>Url</th>
                    <th>Response</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for row in entity %}
                    <tr>
                        <td>{{ row.id }}</td>
                        <td> {{ row.logdip }}</td>
                        <td>{{ row.logurl }}</td>
                        <td>{{ row.logcode }}</td>
                        <td>{{ row.logdate|date("Y-m-d H:i:s") }}</td>
                    </tr>
                    {% else %}
                        <tr class="even" >
                            <td colspan="4" class="align-center">No records found</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endblock %}